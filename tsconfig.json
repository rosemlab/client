{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
//    "composite": true,
    "importHelpers": true,
//    "noImplicitThis": true, // for vue
    "noImplicitAny": true,
//    "noUnusedLocals": true,
//    "noUnusedParameters": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
//    "declaration": true,
//    "declarationMap": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "types": [
      "jest",
      "node"
    ],
    "rootDir": ".",
    "paths": {
      "@rosemlabs/*": ["packages/*"]
    }
  },
//  "references": [],
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.sfc"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
