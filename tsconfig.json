{
  "compilerOptions": {
//    "rootDir": "./packages",
    "outDir": "dist",
    "jsx": "preserve",
    // esnext if babel is used, es5 otherwise
    "target": "esnext",
    // commonjs is set to use custom Node.js modules during runtime
    "module": "commonjs",
    "strict": true,
//    "composite": true,
    "importHelpers": true,
    "moduleResolution": "node",
//    "noImplicitThis": true, // for vue
    "noImplicitAny": true,
//    "noUnusedLocals": true,
//    "noUnusedParameters": true,
//    "strictNullChecks": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
//    "noImplicitReturns": true,
//    "noLib": false,
//    "declaration": true,
//    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./packages",
    "types": [
      "jest",
      "node"
//      "lodash-es",
//      "webpack-env"
    ],
//    "paths": {
//      "@rosemlabs/*": [
//        "packages/@rosemlabs/*"
//      ]
//    },
    "lib": [
      "esnext",
      "dom"
//      "dom.iterable",
//      "scripthost"
    ]
  },
//  "references": [],
//  "typeRoots": ["node_modules/@types", "packages/@rosemlabs" ],
  "include": [
//    "webpack.config.ts",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.sfc"
  ],
  "exclude": [
    "node_modules"
  ]
}
