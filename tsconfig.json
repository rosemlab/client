{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    // ES2015 - esm
//    "module": "ES2015",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
//    "composite": true,
//    "importHelpers": true,
//    "noUnusedLocals": true,
//    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
//    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
//    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
//    "declaration": true,
//    "declarationMap": true,
    "jsx": "preserve",
    "lib": ["dom"],
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@rosemlabs/*": ["packages/*"]
    }
  },
//  "references": [],
  // first way
  "include": [
    // .ts, .tsx, .d.ts, [.js, .jsx] if allowJs is set to true
    "packages/**/*",
    "packages/**/*.sfc",
    "packages/**/*.glsl"
//    "packages/ui-transition/*"
  ],
  "exclude": [
    "dist",
    "**/node_modules/**/*"
  ]
}
